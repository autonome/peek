{
  "id": "groups",
  "shortname": "groups",
  "name": "Groups",
  "description": "Tag-based grouping of addresses",
  "version": "1.0.0",
  "background": "background.html",
  "builtin": true,
  "schemas": {
    "prefs": {
      "type": "object",
      "properties": {
        "shortcutKey": {
          "type": "string",
          "description": "Global OS hotkey to open groups manager",
          "default": "Option+g"
        }
      }
    }
  },
  "storageKeys": {
    "PREFS": "prefs"
  },
  "defaults": {
    "prefs": {
      "shortcutKey": "Option+g"
    }
  }
}

{
  "prefs": {
    "type": "object",
    "properties": {
      "shortcutKeyPrefix": {
        "type": "string",
        "description": "Global OS hotkey prefix to trigger peeks - followed by 0-9",
        "default": "Option+"
      }
    }
  },
  "item": {
    "title": "Peeks",
    "type": "object",
    "properties": {
      "keyNum": {
        "type": "integer",
        "description": "Number key (0-9) to trigger this peek",
        "minimum": 0,
        "maximum": 9,
        "default": 0,
        "readOnly": true
      },
      "title": {
        "type": "string",
        "description": "Name of the peek",
        "default": "New Peek"
      },
      "address": {
        "type": "string",
        "description": "URL to load",
        "default": "https://example.com"
      },
      "height": {
        "type": "integer",
        "description": "Window height",
        "default": 600
      },
      "width": {
        "type": "integer",
        "description": "Window width",
        "default": 800
      },
      "persistState": {
        "type": "boolean",
        "description": "Persist local state between sessions",
        "default": false
      },
      "keepLive": {
        "type": "boolean",
        "description": "Keep page alive in background",
        "default": false
      },
      "allowSound": {
        "type": "boolean",
        "description": "Allow the page to emit sound",
        "default": false
      },
      "enabled": {
        "type": "boolean",
        "description": "Whether this peek is enabled",
        "default": false
      }
    }
  },
  "storageKeys": {
    "PREFS": "prefs",
    "ITEMS": "items"
  },
  "defaults": {

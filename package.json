{
  "name": "Peek",
  "version": "0.0.1",
  "description": "Peek is a web user agent for working with the web in a more agent-ish fashion than a browser.",
  "main": "dist/backend/electron/entry.js",
  "author": "dietrich ayala",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/autonome/peek"
  },
  "build": {
    "appId": "com.autonome.peek",
    "productName": "Peek",
    "mac": {
      "icon": "assets/appicon.icns",
      "category": "public.app-category.productivity",
      "identity": null
    },
    "directories": {
      "output": "out"
    }
  },
  "scripts": {
    "//-- Development --//": "",
    "dev": "DEBUG=1 electron .",
    "dev:electron": "DEBUG=1 electron .",
    "dev:tauri": "cd backend/tauri/src-tauri && cargo run",
    "dev:hot": "nodemon --exec 'DEBUG=1 electron .'",

    "//-- Production --//": "",
    "start": "electron .",
    "start:electron": "electron .",
    "start:tauri": "cd backend/tauri/src-tauri && cargo run --release",
    "start:tauri:log": "cd backend/tauri/src-tauri && ./target/release/peek-tauri 2>&1",
    "start:tauri:test": "pkill -INT -f peek-tauri 2>/dev/null; sleep 1; cd backend/tauri/src-tauri && ./target/release/peek-tauri &> /tmp/tauri.log & sleep 5 && tail -50 /tmp/tauri.log && pkill -INT -f peek-tauri",

    "//-- Build --//": "",
    "build": "tsc -p backend/tsconfig.json",
    "build:watch": "tsc -p backend/tsconfig.json --watch",
    "build:electron": "electron-builder --dir",
    "build:electron:install": "electron-builder --dir && rm -rf /Applications/Peek.app && cp -R out/mac-arm64/Peek.app /Applications/",
    "build:electron:dist": "electron-builder",
    "build:tauri": "cd backend/tauri/src-tauri && cargo tauri build",
    "build:tauri:check": "cd backend/tauri/src-tauri && cargo check",

    "//-- Testing --//": "",
    "test": "yarn test:electron && yarn test:tauri",
    "test:electron": "HEADLESS=1 BACKEND=electron npx playwright test tests/desktop/",
    "test:tauri": "yarn test:tauri:frontend; yarn test:tauri:rust",
    "test:tauri:frontend": "HEADLESS=1 BACKEND=tauri npx playwright test tests/desktop/",
    "test:tauri:rust": "cd backend/tauri/src-tauri && cargo test --test smoke -- --nocapture",
    "test:visible": "HEADLESS=0 BACKEND=electron npx playwright test tests/desktop/ --headed",
    "test:debug": "HEADLESS=0 npx playwright test --debug",
    "test:grep": "HEADLESS=1 npx playwright test tests/desktop/ --grep",

    "//-- Misc --//": "",
    "lint": "echo \"No linting configured\""
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "electron-unhandled": "^5.0.0",
    "lil-gui": "^0.19.2"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "electron": "^35.7.5",
    "electron-builder": "26.0.12",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "tmp": "^0.2.5",
    "glob@^11.0.0": "^11.1.0"
  },
  "packageManager": "yarn@4.10.3"
}

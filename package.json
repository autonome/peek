{
  "name": "Peek",
  "version": "0.0.1",
  "description": "Peek is a web user agent for working with the web in a more agent-ish fashion than a browser.",
  "main": "dist/backend/electron/entry.js",
  "author": "dietrich ayala",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/autonome/peek"
  },
  "build": {
    "appId": "com.autonome.peek",
    "productName": "Peek",
    "mac": {
      "icon": "assets/appicon.icns",
      "category": "public.app-category.productivity",
      "identity": null
    },
    "directories": {
      "output": "out"
    }
  },
  "scripts": {
    "start": "electron .",
    "debug": "DEBUG=1 electron .",
    "hot-debug": "nodemon --exec 'DEBUG=1 electron .'",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:backend:watch": "tsc -p backend/tsconfig.json --watch",
    "package": "electron-builder --dir",
    "package:install": "electron-builder --dir && rm -rf /Applications/Peek.app && cp -R out/mac-arm64/Peek.app /Applications/",
    "make": "electron-builder",
    "lint": "echo \"No linting configured\"",
    "help": "electron --help",
    "smoke": "./scripts/smoke-test.sh",
    "smoke:visible": "./scripts/smoke-test.sh --visible",
    "test": "npx playwright test",
    "test:smoke": "npx playwright test tests/smoke.spec.ts",
    "test:persistence": "npx playwright test tests/smoke.spec.ts --grep 'Data Persistence' --timeout=120000",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "tauri:dev": "cd backend/tauri/src-tauri && cargo run",
    "tauri:build": "cd backend/tauri/src-tauri && cargo tauri build",
    "tauri:check": "cd backend/tauri/src-tauri && cargo check",
    "tauri:test": "cd backend/tauri/src-tauri && cargo test --test smoke -- --nocapture"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "electron-unhandled": "^5.0.0",
    "lil-gui": "^0.19.2"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "electron": "^35.7.5",
    "electron-builder": "26.0.12",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "tmp": "^0.2.5",
    "glob@^11.0.0": "^11.1.0"
  },
  "packageManager": "yarn@4.10.3"
}
